<article>
    <h2><a class="title-link" href="{{ url }}">{{ title }} </a></h2>

    <div class="row">
        <div class="group1 col-sm-12">
            {{#each tags}}
                <a class="tag badge badge-primary" href="/tags/{{ this }}.html">{{ this }}</a>
            {{/each}}
            <span class="post-date">on {{ date }}</span>
        </div>
    </div>
    <div class="social-like" style="margin-top:3px;">
        <div class="facebook">
            <div class="fb-like" data-href="{{url}}" data-layout="standard" data-action="like" data-show-faces="false" data-share="true"></div>
        </div>
    </div>
    <hr>
    {{{ content }}}
    <hr>
