<!-- Training Data Specifications -->
<!ELEMENT traindata (pre*,innodes,midlayers,midnodes,outnodes,learnrate,maxcycles,error,data*)>
  <!-- prerequisite knowledge to learn -->
  <!ELEMENT pre (#PCDATA)>
  <!-- number of input nodes -->
  <!ELEMENT innodes (#PCDATA)>
  <!-- number of middle layers -->
  <!ELEMENT midlayers (#PCDATA)>
  <!-- number of nodes in the middle layer -->
  <!ELEMENT midnodes (#PCDATA)>
  <!-- number of output nodes -->
  <!ELEMENT outnodes (#PCDATA)>
  <!-- learning rate -->
  <!ELEMENT learnrate (#PCDATA)>
  <!-- max number of iterations to teach for -->
  <!ELEMENT maxcycles (#PCDATA)>
  <!-- error to train until -->
  <!ELEMENT error (#PCDATA)>
  <!-- number of data --> 
  <!ELEMENT numdata (#PCDATA)>
  <!-- dimensional information about how to view the input and output -->
  <!ELEMENT inwidth (#PCDATA)>
  <!ELEMENT inheight (#PCDATA)>
  <!ELEMENT outwidth (#PCDATA)>
  <!ELEMENT outheight (#PCDATA)>
  <!-- information about the data to be teached -->
  <!ELEMENT data (in*,out*)>
    <!-- input -->
    <!ELEMENT in (#PCDATA)>
    <!-- desired output -->
    <!ELEMENT out (#PCDATA)>

